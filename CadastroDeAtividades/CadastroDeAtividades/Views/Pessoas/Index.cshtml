            @Html.DisplayFor(modelItem => item.Parentesco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PessoaID }) |
