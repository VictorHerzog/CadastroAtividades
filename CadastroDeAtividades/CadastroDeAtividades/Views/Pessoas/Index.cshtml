@model IEnumerable<BaseModel.Pessoa>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar Pessoa", "Create")|
    @Html.ActionLink("Lixeira", "Lixeira")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
